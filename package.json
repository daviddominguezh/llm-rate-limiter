{
  "name": "llm-rate-limiter",
  "version": "0.0.1",
  "private": true,
  "description": "LLM Rate Limiter monorepo",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/e2e/*"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "lint": "npx eslint . --ext .ts",
    "format": "npx prettier --write \"**/*.{js,ts,json}\"",
    "check": "npm run format && npm run lint && npm run typecheck",
    "build": "npm run build --workspaces",
    "build:core": "npm run build -w @llm-rate-limiter/core",
    "build:redis": "npm run build -w @llm-rate-limiter/redis",
    "test": "npm run test --workspaces --if-present",
    "test:core": "npm run test -w @llm-rate-limiter/core",
    "test:redis": "npm run test -w @llm-rate-limiter/redis",
    "test:redis-e2e": "npm run test:e2e -w @llm-rate-limiter/redis",
    "e2e:proxy": "npm run dev -w @llm-rate-limiter/e2e-server",
    "e2e:instance1": "PORT=3001 npm run dev -w @llm-rate-limiter/e2e-server-instance",
    "e2e:instance2": "PORT=3002 npm run dev -w @llm-rate-limiter/e2e-server-instance",
    "e2e:setup": "npm run e2e:instance1 & npm run e2e:instance2 & npm run e2e:proxy",
    "e2e:test": "npm run dev -w @llm-rate-limiter/e2e-test-runner"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "eslint": "^9.28.0",
    "eslint-config-love": "^144.0.0",
    "globals": "^16.2.0",
    "jest": "^30.0.5",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
