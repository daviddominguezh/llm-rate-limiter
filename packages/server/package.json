{
  "name": "@llm-rate-limiter/server",
  "version": "1.0.0",
  "description": "Express server with Redis-backed rate limiting for LLM job queue",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist tsconfig*.tsbuildinfo && tsc -p tsconfig.build.json",
    "typecheck": "tsc -b",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "llm",
    "rate-limiter",
    "express",
    "redis",
    "job-queue"
  ],
  "license": "MIT",
  "dependencies": {
    "@llm-rate-limiter/core": "^1.0.0",
    "@llm-rate-limiter/redis": "^1.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
