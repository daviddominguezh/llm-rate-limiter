{
  "name": "llm-rate-limiter",
  "version": "1.0.0",
  "description": "Closer LLM Rate Limiter utility",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node ./dist/index.js",
    "build": "rm -rf dist tsconfig.build.tsbuildinfo && tsc --build tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "tsx watch ./src/index.ts",
    "dev:strict": "NODE_OPTIONS='--max-old-space-size=160' tsx watch ./src/index.ts",
    "check": "npx eslint . --ext .ts && npm run typecheck",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "typecheck": "tsc -b",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' npx jest --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "eslint": "^9.28.0",
    "eslint-config-love": "^144.0.0",
    "globals": "^16.2.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "engines": {
    "node": ">=24.13.0"
  }
}
